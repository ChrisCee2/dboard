
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:constants="clr-namespace:mystery_app.Constants">
	<Design.PreviewWith>
		<Border Padding="20">
		</Border>
	</Design.PreviewWith>

	<Style Selector="TextBox">
		<Setter Property="Margin" Value="0,2,0,0"/>
		<Setter Property="BorderBrush" Value="{StaticResource NodeTextboxBorderColor}"/>
	</Style>
	<Style Selector="ToggleButton:checked Border">
		<Setter Property="Background" Value="{StaticResource NodeToggledColor}"/>
	</Style>
	<Style Selector="ToggleButton Border">
		<Setter Property="Background" Value="{StaticResource NodeUntoggledColor}"/>
	</Style>
</Styles>
